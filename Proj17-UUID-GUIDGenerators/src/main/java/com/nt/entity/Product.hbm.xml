<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
      <class name="com.nt.entity.Product" table="PRODUCT_XUID" dynamic-insert="false">
                <!--  <id name="pid" type="string" length="35" column="PID">
                   <generator class="uuid"/>
                </id> -->
                 <id name="pid" type="string" length="40" column="PID">
                   <generator class="guid"/>
                </id>
                <property name="pname"  type="string"  column="PNAME"/>
                 <property name="price"  type="float" column="PRICE"/>
                 <property name="qty"  type="float"  column="QTY"/>
</class>
</hibernate-mapping>